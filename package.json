{
  "name": "@arenaentertainment/headless-wallet-monorepo",
  "version": "0.1.0",
  "private": true,
  "description": "Universal headless wallet library supporting both EVM and Solana chains",
  "workspaces": [
    "packages/*",
    "demos/*"
  ],
  "scripts": {
    "build": "nx run-many --target=build --projects=@arenaentertainment/headless-wallet,@arenaentertainment/headless-wallet-react,@arenaentertainment/headless-wallet-vue,@arenaentertainment/headless-wallet-playwright",
    "dev": "pnpm -r dev",
    "demo": "cd demos/vanilla && pnpm dev",
    "release": "nx release",
    "release:version": "nx release version",
    "release:publish": "nx release publish",
    "release:dry-run": "nx release --dry-run"
  },
  "devDependencies": {
    "@nx/js": "^21.5.2",
    "@swc-node/register": "^1.10.9",
    "@swc/core": "^1.9.3",
    "nx": "^21.5.2",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=16.0.0",
    "pnpm": ">=8.0.0"
  },
  "dependencies": {
    "bs58": "^6.0.0"
  }
}